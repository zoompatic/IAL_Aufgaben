package advance;
/*
 * Schreibe ein Klasse, die mithilfe einer Schleife die Summe der geraden und die 
 * Summe der ungeraden Zahlen von 1 bis 20 ausgibt
 *
 * ungeradeSumme {1, 3, 5, 7,...} geradeSumme {2, 4 ,6 ,8 ,...}
 */

public class For_Schleife_Ungerade_Gerade {

	public static void main(String[] args) {
	System.out.println("Ungerade\tGerade"); 		//Erstellt eine Überschrift ähnlich Tabelle
	System.out.println("-----------------------"); 		//Erstellt eine Linie unter der Überschrift
	
	for (int i = 1; i <= 20; i++) { 			//wenn Integer i = 1; bis Integer i <=20; Addiere +1
		if (i%2==0) { 					//wenn i teilbar durch 2 ohne rest
			System.out.println("\t\t" + i); 	// Drucke gerade Zahl
		} else {
			System.out.println(i + "\t\t"); 	// Drucke ungerade Zahl
		}
	}
	
			}
		
	}


